-- Funk language grammar.

comment "//" ;
comment "/*" "*/" ;

Program.	Prog ::= [Decl] "main" Exp ;

Declaration.	Decl ::= Ident [Ident] "be" Exp ;

EGet.		Exp ::= Ident ;
EApplication.	Exp ::= "(" Ident [Exp] ")" ;
ELet.		Exp ::= "let" Decl "in" Exp ;
EInt.		Exp1 ::= Integer ;

coercions Exp 1 ;

separator Ident "" ;
separator Decl ";" ;
separator Exp "" ;
